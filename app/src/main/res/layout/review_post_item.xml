<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@color/white"
    android:layoutDirection="rtl">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:elevation="3dp"
        android:src="@drawable/avatar_layout"
        app:civ_circle_background_color="@color/white" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/profileImage"
        android:text="אליאנה תדהר"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/timeIcon"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_below="@id/userName"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/profileImage"
        android:tint="@color/darkGrey"
        app:srcCompat="@drawable/time" />

    <TextView
        android:id="@+id/postTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName"
        android:layout_marginTop="2dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/timeIcon"
        android:text="לפני 3 ימים"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:stepSize=".5" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bubble"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="4.5"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/ratingBar"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider" />

    <ImageView
        android:id="@+id/coverBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/divider1"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/cover13" />

    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_below="@id/divider1"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/cover13" />

    <View
        android:id="@id/divider"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/coverBackground"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/bookDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:background="@color/grey"
        android:gravity="center_vertical"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:tint="@color/darkGrey"
            app:srcCompat="@drawable/book" />

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="משחקי הרעב - עורבני חקיין"
            android:textColor="@color/darkGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="•"
            android:textColor="@color/darkGrey" />

        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="סוזן קולינס"
            android:textColor="@color/darkGrey" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/bookDetails"
        android:background="?android:attr/listDivider" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookDetails"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="ספר מהמם ממש"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:text="ספר מדהים!!!! חובה קריאה , אהבתי ממש אני לא רוצה לעשות לכם ספוילרים אבל הסוף מפתיע בטירוף רוצו לקרוא "
        android:textColor="@color/black" />


    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@id/comment"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:id="@+id/likeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/likeButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/like"></Button>

        <TextView
            android:id="@+id/likesNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>
    </LinearLayout>


</RelativeLayout>
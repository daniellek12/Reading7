<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/lightGrey"
            android:progressTint="@color/lightGrey"
            android:secondaryProgressTint="@color/lightGrey" />

        <ImageView
            android:id="@+id/coverImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:srcCompat="@color/transparent" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coverImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:stepSize=".5" />

        <ImageView
            android:id="@+id/delete_background"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/coverImage"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="-40dp"
            android:alpha="0.8"
            android:background="@drawable/round_button_white" />

        <ImageView
            android:id="@+id/delete_button"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/coverImage"
            android:layout_alignParentLeft="true"
            android:src="@drawable/delete"
            android:layout_margin="5dp"
            android:tint="@color/design_default_color_error" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/coverImage"
            android:layout_centerHorizontal="true"
            android:alpha="0.8"
            app:srcCompat="@color/black" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>